use Shudd3r\PackageFiles\Terminal;
use Shudd3r\PackageFiles\Build;

$rootDir = getcwd();
if (!file_exists($rootDir . '/vendor/autoload.php')) {
    fwrite(STDERR, 'Cannot find composer vendor/autoload.php file in this directory');
    die(1);
}

require_once $rootDir . '/vendor/autoload.php';

$terminal = new class() implements Terminal
{
    public function input(): string
    {
        $stdin = fopen('php://stdin', 'r');
        $line  = trim(fgets($stdin));
        fclose($stdin);

        if ($line === '!') {
            $this->display('...cancelled' . PHP_EOL);
            exit;
        }

        return $line;
    }

    public function display(string $message): void
    {
        echo $message;
    }
};

$build = new Build($terminal, __DIR__ . DIRECTORY_SEPARATOR . 'skeleton');
$build->run($argv);
