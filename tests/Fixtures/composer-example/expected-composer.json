{
    "name": "{package.name}",
    "description": "{package.description}",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Shudd3r",
            "email": "shudder@example.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.4",
        "monolog/monolog": "2.0.*"
    },
    "require-dev": {
        "some/package": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "{namespace.src.esc}\\": "src/",
            "Library\\Namespace\\": "libs/src/"
        },
        "psr-0": {
            "Monolog\\": [
                "src/",
                "lib/"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "{namespace.src.esc}\\Tests\\": "tests/"
        },
        "classmap": [
            "src/",
            "lib/",
            "Something.php"
        ]
    }
}
