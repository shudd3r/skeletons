use Shudd3r\PackageFiles\Environment;
use Shudd3r\PackageFiles\Application\RuntimeEnv;
use Shudd3r\PackageFiles\Application\FactoryRouting;
use Shudd3r\PackageFiles\Initialize;
use Shudd3r\PackageFiles\Validate;


// This script is assumed to be one of composer dependencies of the package
// located in $rootDirectory/vendor/shudd3r/package-files directory
$rootDirectory = dirname(__DIR__, 3);
if (!file_exists($rootDirectory . '/vendor/autoload.php')) {
    fwrite(STDERR, 'Cannot find vendor/autoload.php file in package root directory');
    die(1);
}

if (!file_exists($rootDirectory . '/composer.json')) {
    fwrite(STDERR, 'Cannot find composer.json file in package root directory');
    die(1);
}

require_once $rootDirectory . '/vendor/autoload.php';

$terminal      = new Environment\Terminal(STDIN, STDOUT, STDERR);
$skeletonFiles = new Environment\FileSystem\Directory\LocalDirectory(__DIR__ . DIRECTORY_SEPARATOR . 'skeleton');
$packageFiles  = new Environment\FileSystem\Directory\LocalDirectory($rootDirectory);
$environment   = new RuntimeEnv($terminal, $terminal, $packageFiles, $skeletonFiles);

$routing = new FactoryRouting($environment, [
    'init'  => Initialize::class,
    'check' => Validate::class
]);

$options = getopt('i', ['package:', 'repo:', 'desc:', 'interactive'], $commandIdx);
$command = $argv[$commandIdx] ?? 'init';

$app = new Environment\CommandLineApp($terminal, $routing);
$exitCode = $app->run($command, $options);
exit($exitCode);
